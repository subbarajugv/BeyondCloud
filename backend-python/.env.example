# Python Backend Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# Server
# =============================================================================
PORT=3000
DEBUG=true

# =============================================================================
# Database (Phase 1)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://llamacpp_user:your_password@localhost:5432/llamacpp_chat

# =============================================================================
# JWT Configuration (Phase 1)
# =============================================================================
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Email - for password reset, verification (Phase 1)
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com

# =============================================================================
# Frontend URL (for email links, CORS)
# =============================================================================
FRONTEND_URL=http://localhost:5173

# =============================================================================
# LLM Providers (Phase 0)
# =============================================================================

# Default provider to use
DEFAULT_LLM_PROVIDER=llama.cpp

# Local providers (no API key needed)
LLAMA_CPP_URL=http://localhost:8080/v1
OLLAMA_URL=http://localhost:11434/v1

# Cloud providers (API key required)
# OpenAI
OPENAI_URL=https://api.openai.com/v1
OPENAI_API_KEY=

# Google Gemini
GEMINI_URL=https://generativelanguage.googleapis.com/v1beta/openai
GEMINI_API_KEY=

# Groq
GROQ_URL=https://api.groq.com/openai/v1
GROQ_API_KEY=
